<odoo>
    <template id="home_page" name="Home Page">
        <t t-call="website.layout">
            <div class="main_container">
                <div class="title">
                    <h1>
                        Calculator</h1>
                    <form class="main_container_parent" method="POST">
                        <div>
                            <label for="input1">Input 1</label>
                            <input type="number" id="input1" name="input1"
                                placeholder="Write in here!" />
                        </div>
                        <div>
                            <label for="input2">Input 2</label>
                            <input type="number" id="input2" name="input2"
                                placeholder="Write in here!" />
                        </div>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <div class="button_js_container">
                            <button class="button_js" type="submit">Calculate
                                Now!</button>
                            <button class="button_js" onclick="options()">Other Options!</button>
                        </div>
                    </form>
                    <div class="output_js" style="display:flex;flex-direction:row;">
                        <p> Your answer is: <p id="output"> </p></p>
                        <p id="output_option"></p>
                    </div>
                    <div class="profile">
                        <p>Profile:</p>
                        <div class="profile_values">
                            <a href="https://github.com/alejandroatacho">
                                <img src="https://avatars.githubusercontent.com/u/15048157?v=4"
                                    alt="profile_picture" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <link rel="stylesheet" href="/hina_web/static/src/css/style.css" /> -->

        </t>
        <!-- <script type="text/javascript" src="/hina_web/static/src/js/web_calc.js"></script> -->

    </template>

    <template id="assets_frontend" name="Assets Frontend" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/hina_web/static/src/css/style.css" />
            <script type="text/javascript" src="/hina_web/static/src/js/web_calc.js"></script>
        </xpath>
    </template>
</odoo>